<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>t3 - Registration Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container">
            <a class="navbar-brand" href="#">Task 3 App</a>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <div class="card card-custom p-4 animate-fade-in">
                    <div class="card-body">
                        <h2 class="text-center mb-4 text-primary">Registration</h2>

                        <% if (errors) { %>
                            <div class="alert alert-danger" role="alert">
                                <strong>Please fix the following:</strong>
                                <ul class="mb-0 mt-2">
                                    <% errors.forEach(function(err) { %>
                                        <li><%= err %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>

                        <form action="/submit" method="POST" onsubmit="return validateForm()">
                            
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your name">
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                            </div>

                            <div class="mb-3">
                                <label for="age" class="form-label">Age</label>
                                <input type="number" class="form-control" id="age" name="age" placeholder="18+">
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg btn-transform">Register Now</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <p class="text-center mt-3 text-muted">Powered by Node.js & Bootstrap</p>

            </div>
        </div>
    </div>

    <script>
        function validateForm() {
            const name = document.getElementById('username').value;
            const age = document.getElementById('age').value;
            if (name == "") { alert("Name is required"); return false; }
            if (age < 18) { alert("Must be 18+"); return false; }
            return true;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>